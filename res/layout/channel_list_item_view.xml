<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:test="http://schemas.android.com/apk/res/com.zzxhdzj.douban"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
    <com.zzxhdzj.app.channels.views.CircleImageView
            android:id="@+id/channel_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cover_expand"
            android:layout_alignParentLeft="true"
            test:border_width="2dp"
            test:border_color="#abc"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:orientation="vertical"
                  android:layout_toRightOf="@+id/channel_image">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/channel_item_name"
                  android:text="name"/>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/channel_item_intro"
                  android:text="intro"/>
    </LinearLayout>
</RelativeLayout>